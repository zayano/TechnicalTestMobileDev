<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArticleDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleArticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TITLE"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dateArticle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textColor="#959595"
                android:textSize="10sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#959595"
                android:textSize="10sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/authorArticle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="author"
                android:textColor="#959595"
                android:textSize="10sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageArticle"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:layout_marginVertical="10dp"/>

        <TextView
            android:id="@+id/contentArticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginHorizontal="20dp"/>

    </LinearLayout>

</RelativeLayout>